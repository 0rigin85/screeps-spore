{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./bin",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "lodash.d.ts",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}